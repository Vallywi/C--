#include <iostream>

using namespace std;
// NICE
int main (){

int size;
cout <<"Enter the size of a first and the second array: ";
cin >> size;

int arr1[size];
for (int i = 0; i < size; i++){
cout << "Enter the " << i + 1<< " for the first array: ";
cin >> arr1[i];
}
cout << endl;

int arr2[size];
for (int i = 0; i < size; i++){
cout << "Enter the " << i + 1<< " for the first array: ";
cin >> arr2[i];
}

int arr3[size];
for (int i = 0; i < size; i++){
if (arr1[i]>arr2[i])
arr3[i] = arr1[i];
else
arr3[i] = arr2[i];

}

for(int i = 0; i < size; i++){
cout << arr3[i] << " ";

}


return 0;

}
